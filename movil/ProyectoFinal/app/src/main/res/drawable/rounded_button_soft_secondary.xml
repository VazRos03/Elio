<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/accent_light">
    <item>
        <selector>
            <!-- Estado presionado -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/accent_light"/>
                    <corners android:radius="16dp"/>
                    <stroke android:color="@color/primary_soft" android:width="1dp"/>
                </shape>
            </item>
            <!-- Estado normal -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="16dp"/>
                    <stroke android:color="@color/primary_soft" android:width="1dp"/>
                    <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>