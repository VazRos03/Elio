<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primary_soft"> <!-- Efecto Ripple al presionar -->
    <item>
        <selector>
            <!-- Estado presionado -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/secondary_warm"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <!-- Estado normal -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <gradient
                        android:angle="0"
                        android:startColor="@color/primary_soft"
                        android:endColor="@color/secondary_warm"/>
                    <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>